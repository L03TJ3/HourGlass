<div class='bglogo'>
  <div class = "headerindex">
    <center><img id='logo' src="http://res.cloudinary.com/codaisseur/image/upload/v1461160604/HORRIFY_ujq3ya.png"></center>
  </div>
</div>

<p id="notice"><%= notice %></p>
<div class="container-fluid index">

<div class="welcome">
  <h2 class="wel-head">
    Welcome to Hourify <br  />
    Below you can find our products
  </h2>
  <h4>(Click on a picture to go to a products page) </h4>
</div>
  <ul class="bxslider">
  <% @items.each do |item| %>


    <li>
      <%= link_to image_tag(item.image, class: "index-img"), item_path(item.id) %>
      <div class="test">
        <div class="tag">Name:  <%= item.name %></div>
        <div class="tag">Price:  $<%= item.price %></div>
        <div class="tag">Quantity:  <%= item.quantity %></div>
        <div class="atc_button"><p class="atc"><%= link_to 'Add to cart', shopping_cart_items_path(item_id: item.id, quantity: 1), method: :post  %></p></div>
      </div>
    </li>

  <% end %>
  </ul>
  <!-- <%= link_to 'New Item', new_item_path %> -->
</div>

<div class="trigger">
  <img src="http://666marine.com/Shopping_Cart_Logo_op_800x571.png" />
</div>

<div class="cart-content">
<!--  <%= session[:shopping_cart] %> -->

  <% if session[:shopping_cart] != nil %>
    <% session[:shopping_cart].each do |item_id, quantity| %>
      <% item = Item.find(item_id.to_i) %>
      <%= item.name %>
      <%= quantity %>
      <%= item.price %>
      <br />

      <%= link_to 'Remove from cart', shopping_cart_item_path(item.id), method: :delete %>
      <br />
    <% end %>
    <%= link_to 'Empty cart', empty_cart_path(1), method: :delete %>
  <% end %>
</div>
